package StringPrograms;
public class SumInRange 
{
	public static int sum(int a, int b) 
	{
		int sum=0;
		if(a<=b)
		{
			for(int i=a;i<=b;i++)
			{
				sum=sum+i;
			}
		}
		else
		{
			for(int i=a;i>=b;i--)
			{
				sum=sum+i;
			}
		}
		return sum;
	}
	public static void main(String []args)
	{
		System.out.println("Sum from 1 to 5: "+sum(1,5));
		System.out.println();
		System.out.println("Sum from 8 to 1: "+sum(8,1));
	}
}
